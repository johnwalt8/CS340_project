<h1><a href="/">My Books</a></h1>

<nav>
    <ul>
        <li><a href="myBooksAuthors" >Authors</a>
        </li><li><a href="myBooksBooks">Books</a>
        </li><li class="current"><a href="#">Add</a>
        </li>
    </ul>
</nav>
<div>
    <div id="bookMessage">
        <p>Enter a 10 or 13 digit ISBN to check if this book is already in our database.</p>
    </div>
    <form id="bookForm" class="tbl">
            <p class="tbl">
                <label class="tbl" for="isbnInput">ISBN:</label>
                <input class="tbl" type="text" name="isbn" maxlength="19" size="19" required autofocus id="isbnInput">
                <input class="tbl" type="button" name="fetch" value="check" id="fetchButton">
            </p>
            <p class="tbl">
                <label class="tbl" for="titleInput">Title:</label>
                <input class="tbl" type="text" name="title" maxlength="60" size="45" id="titleInput">
            </p>
            <p class="tbl">
                <label class="tbl" for="lastNameInput">Author <strong>Last</strong> Name:</label>
                <input class="tbl" type="text" name="authorLast" maxlength="30" size="30" id="lastNameInput">
            </p>
            <p class="tbl">
                <label class="tbl" for="firstNameInput">Author First Name:</label>
                <input class="tbl" type="text" name="authorFirst" maxlength="30" size="30" id="firstNameInput">
            </p>
            <p class="tbl">
                <label class="tbl" for="midNameInput">Author Middle Name:</label>
                <input class="tbl" type="text" name="authorMid" maxlength="30" size="30" id="midNameInput">
            </p>
            <p class="tbl">
                <label class="tbl" for="classInput">Classification:</label>
                    {{#if error}}
                        {{error}}
                    {{else}}
                        {{#if classes}}
                            <select class="tbl" name="class" id="classInput">
                                {{#each classes}}
                                    <option value="{{this.class_id}}">{{this.class_name}}</option>
                                {{/each}}
                                <option value="0" selected></option>
                            </select>
                        {{else}}
                            something, somewhere, has gone just a little bit wrong
                        {{/if}}
                    {{/if}}
            </p>
            <p class="tbl">
                <label class="tbl" for="ratingInput">Rating:</label>
                    {{#if error}}
                        {{error}}
                    {{else}}
                        {{#if ratings}}
                            <select class="tbl" name="rating" id="ratingInput">
                                {{#each ratings}}
                                    <option value="{{this.book_rate_id}}">{{this.book_rate_description}}</option>
                                {{/each}}
                                <option value='0' selected></option>
                            </select>
                        {{else}}
                            something, somewhere, has gone just a little bit wrong
                        {{/if}}
                    {{/if}}
            </p>
            <p class="tbl">
                <label class="tbl" for="pubInput">Year of Publication:</label>
                <input class="tbl" type="number" name="orig_pub_date" min="1000" max="2088" id="pubInput">
            </p>
            <p class="tbl">
                <label class="tbl" for="addEditButton"></label>
                <input class="tbl" type="submit" value="Add/Edit Book" id="addEditButton">
            </p>
    </form>
</div>
<script type="text/javascript" src="scripts/addEdit.js"></script>
