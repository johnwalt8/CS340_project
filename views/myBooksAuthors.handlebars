{{#if reader}}<p id="reader">{{reader.reader_first_name}} {{reader.reader_last_name}}</p>{{/if}}

<h1><a href="/?rdr={{rdr}}">My Books</a></h1>

<nav>
    <ul>
        <li class="current"><a href="#" >Authors</a>
        </li><li><a href="myBooksBooks?rdr={{rdr}}">Books</a>
        </li><li><a href="myBooksAddEdit?rdr={{rdr}}">Add</a>
        </li>
    </ul>
</nav>
<div>
    {{#if error}}
        <h3>{{error}}</h3>
    {{else}}
        {{#if length}}
            <p><strong>Authors:</strong> {{length}} currently listed.</p>
        {{/if}}
        {{#if authors}}
            <ul>
                {{#each authors}}
                    <li>
                        <p class='author'>
                            <a href="thisAuthor?rdr={{rdr}}&authorid={{this.author_id}}">{{this.author_last_name}}, {{this.author_first_name}} {{this.author_mid_name}}</a>
                        </p>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <h3>something, somewhere, has gone just a little bit wrong</h3>
        {{/if}}
    {{/if}}
</div>